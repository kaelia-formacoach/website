---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="bg-white py-12">
    <div class="container mx-auto px-6">
      <!-- Section Header -->
      <h1 class="text-4xl font-bold text-purple-800 mb-6 text-center">
        Rejoignez l'équipe Kaelia Forma'Coach
      </h1>
      <p class="text-lg text-gray-700 mb-12 text-center">
        Remplissez le formulaire ci-dessous pour postuler à nos opportunités.
      </p>

      <!-- Formulaire -->
      <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-3xl font-semibold text-gray-900 mb-6">
          Postulez dès maintenant
        </h2>
        <form
          action="http://localhost:8000/mailer/submit_candid.php"
          method="POST"
          enctype="multipart/form-data"
          class="space-y-6"
        >
          <!-- Nom -->
          <div>
            <label for="name" class="block text-gray-700 font-semibold">Nom complet *</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
              required
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-gray-700 font-semibold">Email *</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
              required
            />
          </div>

          <!-- Téléphone -->
          <div>
            <label for="phone" class="block text-gray-700 font-semibold">Téléphone</label>
            <input
              type="text"
              id="phone"
              name="phone"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
            />
          </div>

          <!-- CV -->
          <div>
            <label for="cv" class="block text-gray-700 font-semibold">CV (PDF) *</label>
            <input
              type="file"
              id="cv"
              name="cv"
              accept=".pdf"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
              required
            />
          </div>

          <!-- Lettre de motivation -->
          <div>
            <label for="cover_letter" class="block text-gray-700 font-semibold">Lettre de motivation (PDF) *</label>
            <input
              type="file"
              id="cover_letter"
              name="cover_letter"
              accept=".pdf"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
              required
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-gray-700 font-semibold">Message *</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
              placeholder="Expliquez brièvement pourquoi vous souhaitez nous rejoindre."
              required
            ></textarea>
          </div>

          <!-- Bouton de soumission -->
          <button
            type="submit"
            class="bg-purple-800 text-white px-6 py-3 rounded-lg shadow hover:bg-purple-700 transition"
          >
            Envoyer ma candidature
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
