<header class="bg-white shadow-md py-4">
  <div class="container mx-auto flex items-center justify-between">
    <!-- Bouton hamburger pour les petits écrans -->
    <button id="menu-btn" class="md:hidden text-gray-700 focus:outline-none">
      <svg
        class="h-8 w-8"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>

    <!-- Menu de gauche pour les écrans moyens et grands -->
    <nav class="hidden md:flex space-x-6">
      <a
        href="/formations"
        class="menu-link text-gray-800 hover:text-purple-600">Formations</a
      >
      <a
        href="/entreprise"
        class="menu-link text-gray-800 hover:text-purple-600">Entreprise</a
      >
    </nav>

    <!-- Logo centré pour tous les écrans -->
    <a href="/" class="flex-shrink-0 mx-auto">
      <img
        src="/images/header/logo-kaelia.png"
        loading="eager"
        alt="Kaelia Logo"
        class="h-12 md:h-16"
      />
    </a>

    <!-- Menu de droite pour les écrans moyens et grands -->
    <nav class="hidden md:flex space-x-6">
      <a href="/le-klub" class="menu-link text-gray-800 hover:text-purple-600"
        >Le Klub</a
      >
      <a href="/contact" class="menu-link text-gray-800 hover:text-purple-600"
        >Contact</a
      >
    </nav>
  </div>

  <!-- Menu mobile caché par défaut, affiché lorsque le bouton hamburger est cliqué -->
  <div
    id="mobile-menu"
    class="hidden md:hidden flex-col mt-4 space-y-4 text-center bg-white shadow-lg p-4"
  >
    <a
      href="/formations"
      class="menu-link block text-gray-800 hover:text-purple-600">Formations</a
    >
    <a
      href="/entreprise"
      class="menu-link block text-gray-800 hover:text-purple-600">Entreprise</a
    >
    <a
      href="/le-klub"
      class="menu-link block text-gray-800 hover:text-purple-600">Le Klub</a
    >
    <a
      href="/contact"
      class="menu-link block text-gray-800 hover:text-purple-600">Contact</a
    >
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const menuBtn = document.getElementById("menu-btn");
      const mobileMenu = document.getElementById("mobile-menu");
      const menuLinks = document.querySelectorAll(".menu-link");

      // Vérifiez si menuBtn et mobileMenu existent avant d'ajouter des écouteurs
      if (menuBtn && mobileMenu) {
        // Afficher / Masquer le menu mobile quand on clique sur le bouton hamburger
        menuBtn.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });
      }

      // Récupérer l'URL actuelle de la page
      const currentPath = window.location.pathname;

      // Boucler sur chaque lien et ajouter la classe 'active' si l'URL correspond
      menuLinks.forEach((link) => {
        if (link.getAttribute("href") === currentPath) {
          link.classList.add("active");
        }

        // Ajouter l'événement de clic pour changer l'état actif
        link.addEventListener("click", function () {
          // Supprimer la classe active de tous les liens
          menuLinks.forEach((l) => l.classList.remove("active"));
          // Ajouter la classe active au lien cliqué
          link.classList.add("active");
        });
      });
    });
  </script>
</header>

<style>
  /* Styles pour les liens de menu actifs */
  .active {
    color: purple; /* Violet */
    text-decoration: underline;
    text-underline-offset: 4px;
  }
</style>
